{{#with cube}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span>{{description}}</p>
  <p><span>Difficulty level:</span>{{difficultyLevel}}</p>
  <a class="btn" href="/">Back</a>
  <a class="btn" href="/details/{{_id}}/attach">Attach Stockers</a>
  <a class="btn" href="/edit/{{_id}}">Edit</a>
</div>
<h2>Accessories</h2>
<div class="accessories">
  {{#each accessories}}
  {{> accessory}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/each}}
</div>
<div class="details">
  <form action="/comments/{{_id}}/create" method="POST">
    <span>Your Name:</span>
    <input type="text" name="author"><br>
    <span>Comment:</span>
    <textarea name="content"></textarea><br>
    <input type="submit" value="post comment">
  </form>
  {{#each comments}}
  {{> comment}}
  {{else}}
  <span style="font-style: italic">no comments yet. Be the first one...</span>
  {{/each}}
</div>
{{/with}}